@model CIS174GameProject.Models.CreatePersonModel
<script src="~/Scripts/DMACC/profile.js" type="text/javascript"></script>
<h2>Create Profile</h2>
<input id="userID" value="userId" type="hidden" onload=searchPeopleCreate() />
<script>
    searchPeopleCreate();
</script>

<div class="alert alert-success hidden" role="alert" id="successMessage"></div>

<div id="Success" class="hidden">
    <p> You have succesfully created a profile. Please go back to your profile page to access it!</p>
    [
    @Html.ActionLink("Go to your profile", "Update")
    ]
</div>

<div class="alert alert-danger hidden" role="alert" id="errorMessage"></div>

<div id="CreateForm" class="hidden">
    <form name="personForm">
        <p>First Name: <input id="firstName" type="text" required></p>
        <p>Last Name: <input id="lastName" type="text" required></p>
        <p>Email: <input id="email" type="email" required></p>
        <p>Phone Number: <input id="phoneNumber" type="text"></p>
        Gender:
        <select form="CreateForm" name="genderSelect" id="genderSelect" class="ui dropdown">
            <option value="0">Male</option>
            <option value="1">Female</option>
            <option value="2">Other</option>
        </select>
        <br /><br />
        <button type="button" onclick="createPerson()" value="Save">Save</button>
    </form>
</div>
